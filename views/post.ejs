<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/header") %>
    <title>Post</title>
    <style>

      div.top {
        padding: 0 2rem 2rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      h1 {
        text-align: center;
        color: rgb(35, 35, 39);
        margin: 0rem;
        border-bottom: 5px solid rgb(135, 169, 255);
      }

      label{
        font-size: 1.2rem;
        margin:0.3rem
      }
      button.btn{
        background-color:rgb(81, 131, 255);
        border:0px;
      }
    </style>
  </head>
  <body>
    <%- include ("partials/nav") %>
    <main style="padding: 3rem">
      <%- include ("partials/message") %>
      <div class="top">
        <h1>&nbsp&nbsp新增貼文&nbsp&nbsp</h1>
      </div>

      <div class="shadow p-3 mb-5 bg-white rounded">
      <form action="/profile/post" method="POST">
        <div class="form-group">
          <label for="exampleforTitle">標題：</label>
          <input
            name="title"
            type="text"
            class="form-control"
            id="exampleforTitle"
          />
        </div>
        <br />
        <div class="form-group">
          <label for="exampleforContent">內容：</label>
          <textarea
            class="form-control"
            id="exampleforContent"
            aria-describedby="emailHelp"
            name="content"
          ></textarea>
        <br />
        <button type="submit" class="btn btn-primary">提交Post</button>
      </form>
    </div>
    </main>
  </body>
</html>